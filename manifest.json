{
  "name": "Chrome Extension Test",
  "version": "1.0",
  "description": "Save your favourite links",
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  }, 
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/floppy.png",
    "default_title": "Save that link!"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["storage.js"]
  }],
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "storage",
    "contentSettings"
  ],
  "manifest_version": 2
}